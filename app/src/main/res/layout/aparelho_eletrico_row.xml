<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pal2"
    android:backgroundTint="@color/pal2"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/pal2"
            app:srcCompat="@drawable/aparelho" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:background="@color/pal2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_nomeAparelhoE_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txt_valorAparelhoE_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txt_potencia_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_tempoUsoAparelhoE_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="0.4"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_salvar_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:foreground="@drawable/editarw" />

        <Button
            android:id="@+id/btn_excluir_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:foreground="@drawable/excluir" />

    </LinearLayout>
</LinearLayout>